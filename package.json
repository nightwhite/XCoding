{
  "name": "xcoding",
  "productName": "XCoding",
  "private": true,
  "version": "0.0.4-beta.1",
  "type": "module",
  "main": "dist/main/main.cjs",
  "scripts": {
    "prebuild": "pnpm run setup:codex && pnpm run setup:claude-code",
    "preinstall": "node scripts/ensure-pnpm.cjs",
    "postinstall": "node scripts/fix-node-pty-perms.cjs && node scripts/fetch-firacode-nerd-font.cjs",
    "setup:codex": "node scripts/fetch-codex-binary.cjs",
    "setup:claude-code": "node scripts/copy-claude-code.cjs",
    "setup:fonts": "node scripts/fetch-firacode-nerd-font.cjs",
    "dev": "concurrently -k \"vite\" \"pnpm run main:watch\" \"wait-on http://127.0.0.1:5173 file:dist/main/main.cjs && pnpm run electron:dev\"",
    "main:watch": "tsup --config tsup.config.ts --watch --onSuccess \"node scripts/copy-preload.cjs\"",
    "electron:dev": "node scripts/electron-dev.cjs .",
    "build": "vite build && tsup --config tsup.config.ts && node scripts/copy-preload.cjs",
    "start": "electron .",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "i18n:scan": "tsx scripts/i18n-scan.ts",
    "i18n:scan:fail": "tsx scripts/i18n-scan.ts --fail",
    "dist": "pnpm build && electron-builder --publish never",
    "dist:mac": "pnpm build && electron-builder --mac dmg --publish never"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "0.1.73",
    "@anthropic-ai/claude-code": "2.1.1",
    "@monaco-editor/react": "^4.7.0",
    "@types/node": "^25.0.3",
    "@vscode/ripgrep": "^1.17.0",
    "@xterm/addon-canvas": "^0.7.0",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-search": "^0.16.0",
    "@xterm/addon-unicode11": "^0.9.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/addon-webgl": "^0.19.0",
    "@xterm/xterm": "^5.5.0",
    "chokidar": "^4.0.3",
    "lucide-react": "^0.562.0",
    "monaco-editor": "^0.52.2",
    "node-pty": "1.1.0-beta43",
    "pyright": "^1.1.407",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "rehype-raw": "^7.0.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "vscode-jsonrpc": "^8.2.1",
    "vscode-languageserver-protocol": "^3.17.5",
    "yauzl": "^2.10.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/yauzl": "^2.10.3",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "^32.2.7",
    "electron-builder": "^24.13.3",
    "eslint": "^9.17.0",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.50.1",
    "vite": "^6.0.7",
    "vite-plugin-monaco-editor": "^1.1.0",
    "wait-on": "^8.0.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild",
      "node-pty",
      "@vscode/ripgrep"
    ],
    "overrides": {
      "punycode": "^2.3.1",
      "braces": "^3.0.3",
      "micromatch": "^4.0.8",
      "semver": "^7.7.1"
    }
  },
  "build": {
    "appId": "com.xcoding.app",
    "productName": "XCoding",
    "icon": "build/icon",
    "npmRebuild": false,
    "asar": true,
    "compression": "maximum",
    "electronLanguages": [
      "en-US",
      "zh-CN"
    ],
    "files": [
      "dist/**/*",
      "!**/*.map",
      "!**/*.md",
      "!**/*.ts",
      "!**/*.tsx",
      "!**/*.d.ts",
      "!**/__tests__/**",
      "!**/test/**",
      "!**/tests/**",
      "!**/example/**",
      "!**/examples/**",
      "!**/docs/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/codex",
        "to": "codex"
      },
      {
        "from": "assets/claude-code",
        "to": "claude-code"
      }
    ],
    "afterPack": "build/afterPack.cjs",
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns",
      "identity": null,
      "artifactName": "XCoding-${version}-mac-${arch}.${ext}"
    },
    "win": {
      "icon": "build/icon.ico"
    }
  }
}
